//String (DİZGİLER)

package javaapplication1;

public class JavaApplication1 {
    public static void main(String[] args) {
        String str = "Merhabalar, benim ismim Tugay.";
        
        //Tum karakterleri buyuk yapar.
        str = str.toUpperCase();
        System.out.println(str);
        
        //Belirtilen stringin baslangic indexi
        int firstBlank = str.indexOf(" ");
        System.out.println("Ilk boslugun indexi: " + firstBlank);
        
        //Belirtilen indexten sonrasini alma
        String cWord = str.substring(firstBlank);
        System.out.println(cWord);
        
        //İlk kelimeyi alma
        String firstWord = str.substring(0, firstBlank);
        System.out.println(firstWord);
        
        //Son kelimeyi alma
        int lastBlank = str.lastIndexOf(" ");
        String lastWord = str.substring(lastBlank);
        System.out.println(lastWord);
        
        //Belirtilen indexteki karakteri alma
        System.out.println("9. indexteki karakter: " + str.charAt(9) + " 'dir."); 
    }  
}
