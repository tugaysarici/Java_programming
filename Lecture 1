//2- Assigment in Java
package javaapplication1;

public class JavaApplication1 {
    public static void main(String[] args) {
        int x = 10;
        int y;
        y = 5;
        System.out.println("Merhaba " + x + " numara " + y + " yildiz kardesim.");
        
        float pi = (float) 3.14;
        //double pi = 3.14
        //float daha kucuk yer kaplar
        String str = "Pi sayisi = ";
        System.out.println(str + pi);     
    }  
}
